<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.alilo.virustotalclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".VirusTotal"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".features.tos.ToSActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".features.applist.AppListActivity"
            android:label="@string/apps_label" />

        <activity
            android:name=".features.settings.SettingsActivity"
            android:label="@string/settings_label" />

        <activity
            android:name=".features.settings.about.AboutActivity"
            android:label="@string/about_label" />

    </application>

</manifest>
